 }

 .middle-best-price {
      margin-top: 20px;
 }

 .col-2 {
      margin-top: 25px;
 }

 .avgtext {
      font-size: 1em;
 }

 .home-btn {
      color: #3dc6c1;
      border: 2px solid #3dc6c1;
      background-color: transparent;
      padding: 6px 20px;
      border-radius: 5px;
 }

 .HodImage {
      padding: 10px;
      height: 55;
      margin-top: 20px;
      margin-left: 10px;
 }

 table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 20px;
      margin: 0 auto;
      border-radius: 8px;
      overflow: hidden;
      
 }

 th,
 td {
      border: none;
      padding: 15px;
      text-align: left;
      font-size: 16px;
      text-align: center;
 }

 th {
      background-color: #1c1e26;
      color: #bbbbbb;
      text-transform: uppercase;
      font-weight: bold;
 }

 tbody tr {
      background-color: #232432;
      border-radius: 8px;
 }

 tbody tr:nth-child(even) {
      background-color: #191d28;
 }

 tbody tr td {
      position: relative;
      font-size: 16px;
      color: #fff;
 }

 tbody tr:hover {
      background-color: #1c1e26;
 }

 td:first-child {
      font-weight: bold;
      font-size: 18px;
 }

 td:nth-child(5) {
      font-weight: bold;
      font-size: 18px;
      color: #ff4c4c;
 }

 td:nth-child(5).positive {
      color: #00d084;
 }

 td:nth-child(6) {
      font-weight: bold;
      font-size: 18px;
      color: #ff4c4c;
 }

 td:nth-child(6).positive {
      color: #00d084;
 }

 td {
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
 }

 thead th {
      padding: 15px 20px;
      font-size: 16px;
 }

 tbody tr {
      padding: 10px 0;
 }

 .dropdown-menu {
      width: fit-content;
 }

 

