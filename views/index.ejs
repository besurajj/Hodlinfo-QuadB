      }
 }

 @media (max-width: 992px) {
      ul {
           flex-direction: column;
           align-items: center;
      }

      .option {
           margin-left: 0;
           margin-top: 10px;
      }

      .telegram-btn {
           width: 180px;
           height: 45px;
      }

      .timer-circle {
           width: 35px;
           height: 35px;
           font-size: 18px;
      }
 }

 @media (max-width: 768px) {
      .hero {
           height: auto;
           padding: 10px 0;
      }

      .hero .hero-list {
           font-size: 18px;
      }

      .list {
           font-size: 16px;
      }
 }

 @media (max-width: 576px) {
      .hero-main {
           padding-top: 0;
      }

      .telegram-btn {
           width: 150px;
           height: 40px;
           font-size: 14px;
      }

      .timer-circle {
           width: 30px;
           height: 30px;
           font-size: 16px;
      }

      .table th,
      .table td {
           font-size: 12px;
      }

      .home-btn {
           padding: 4px 15px;
           font-size: 14px;
      }
 }

 @media (max-width: 400px) {
      .hero .hero-list {
           font-size: 16px;
      }

      .timer-circle {
           font-size: 14px;
      }
 }

 .table-container {
      max-height: 300px;
      overflow-y: auto;
      margin-top: 0;
      /* align-content: center; */
 }

 .table {
      margin-top: 0;
 }

 .dark-theme {
      background-color: aliceblue;
      color: black;
 }

 .dark-theme .body {
      background-color: white;
 }

 .usd {
      margin-left: 20px;
      box-sizing: border-box;
 }

 .switch {
      position: relative;
      margin-top: 5px;
      display: inline-block;
      width: 58px;
      height: 30px;
 }

 .switch input {
      opacity: 0;
      width: 0;
      height: 0;
 }

 .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #2a2c3a;
      transition: 0.4s;
      border-radius: 24px;
 }

 .slider::before {
      position: absolute;
      content: "";
      height: 28px;
      width: 30px;
      left: 2px;
      bottom: 2px;
      background-color: #5de8e3;
      transition: 0.4s;
      border-radius: 50%;
 }

 input:checked+.slider {
      background-color: #232432;
 }

 input:checked+.slider::before {
      transform: translateX(26px);
 }

 .dark *{
    background-color: whitesmoke;
 }
    </style>
</head>
  <body>
