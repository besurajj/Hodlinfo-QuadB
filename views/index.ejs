    <style>
         html,
 body {
      height: 100%;
      margin: 0;
      display: flex;
      flex-direction: column;
      box-sizing: border-box;
 }

 body {
      background-color: #191d28;
      font-family: "Oswald", sans-serif;
      color: white;
 }

 main {
      flex: 1;
      height: fit-content;
 }

 .home-footer {
      width: 100%;
      height: 47px;
      background-color: #191d28;
      text-align: center;
      position: relative;
      bottom: 15px;
 }

 select,
 option {
      color: white;
      background-color: #2e3241;
 }

 ul {
      display: flex;
      justify-content: space-between;
      padding: 0;
      margin-top: 10px;
      list-style: none;
 }

 .dropdown-menu .dropdown-item {
