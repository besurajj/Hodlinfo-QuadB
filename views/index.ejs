 }

 .dropdown {
      margin-left: 20px;
 }

 .dropdown-item:hover {
      background-color: #90cbff;
 }

 .telegram-btn {
      background-color: #3dc6c1;
      color: white;
      width: 150px;
      height: 35px;
      border-radius: 10px;
      border: none;
      margin-left: -110px;
      position: absolute;
 }

 a {
      text-decoration: none;
 }

 .option {
      margin-left: 200px;
 }

 .timer-circle {
      position: relative;
      width: 35px;
      height: 35px;
      border-radius: 50%;
      border: 4px solid #3dc6c1;
      display: flex;
      justify-content: center;
