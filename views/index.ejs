            <!-- use this line if you want to set logo of cryptocoins -->
             <!-- <td>
                 <img
                  src="<%= result.image %>"
                  alt="<%= result.name %> logo"
                  style="width: 30px; height: 30px; margin-right: 10px"
                />
                <%= result.name %>
